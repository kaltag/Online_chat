<%= turbo_stream_from :rooms %>

<%= turbo_frame_tag :rooms do %>
  <%= render @rooms %>
<% end %>

<%= form_with model: @new_room do |f|%>
  <% if user_signed_in?%>
    <div class="pt-5 border-gray-300 border-t">
      <%= f.submit t('.new_room'), class: 'relative w-48 py-2 px-4 border border-transparent text-md md:text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out cursor-pointer' %>
    </div>
  <% end %>
<% end %>
