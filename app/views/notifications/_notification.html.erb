<li>
  <div>
    <p class="text-gray-700">
      <%= notification.to_notification.message %>
    </p>
    <div class="flex justify-between mt-1 text-gray-500 text-sm space-x-4">
      <p>
        Received on <%= l(notification.created_at, format: :short) %>
      </p>
      <p>
        Chat: <%= Room.find(notification.params[:message][:room_id]).title  %>
      </p>
      <%= link_to 'Delete', notification, data: {turbo_method: :delete} %>
    </div>
  </div>
</li>